    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="ihc" />
    <Button
    android:id="@+id/bt_idh4"
    android:layout_margin="10dp"
    android:background="@drawable/btn_bg_design"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="ihc" />
    <Button
    android:id="@+id/bt_idh5"
    android:layout_margin="10dp"
    android:background="@drawable/btn_bg_design"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="ihc" />


</LinearLayout>
</ScrollView>